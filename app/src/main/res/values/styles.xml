<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">55dp</item>

        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment"> center</item>
        <item name="android:checkable"> true</item>

        <item name="chipBackgroundColor">@color/bg_color_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>

        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/white_opacity10</item>
    </style>

    <style name="CustomBoldChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">55dp</item>

        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment"> center</item>
        <item name="android:checkable"> false</item>

        <item name="chipBackgroundColor">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIcon">@drawable/ic_baseline_add_24</item>
        <item name="iconGravity"> start </item>

        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/white_opacity10</item>
    </style>

</resources>